<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./n&f/head.ejs') %>
  </head>

  <body dir="rtl">
    <!-- Main Wrapper -->
    <div class="main-wrapper">
      <%- include("./n&f/nav.ejs") %>
      <!-- Page Wrapper -->
      <div class="page-wrapper">
        <!-- Page Content -->
        <div class="content container-fluid">
          <div class="row">
            <div class="col-md-6 d-flex">
              <div class="card card-table flex-fill">
                <div class="card-header">
                  <h3 class="card-title mb-0">معلومات الحجز</h3>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-nowrap custom-table mb-0">
                      <thead>
                        <tr>
                          <th>اسم العميل</th>
                          <th>تاريخ</th>
                          <th>هاتف العميل</th>
                          <th>جنس العميل</th>
                          <th>خدمة</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.booking.forEach(book => { %>
                        <tr>
                          <td>
                            <h2><a href="#"><%= book.name %></a></h2>
                          </td>
                          <td><%= book.date %></td>
                          <td><%= book.phone %></td>
                          <td><%= book.gender %></td>
                          <td><%= book.service %></td>
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6 d-flex">
              <div class="card card-table flex-fill">
                <div class="card-header">
                  <h3 class="card-title mb-0">رسائل</h3>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table custom-table table-nowrap mb-0">
                      <thead>
                        <tr>
                          <th>اسم العميل</th>
                          <th>البريد الإلكتروني للعميل</th>
                          <th>هاتف العميل</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.contacts.forEach(contact => {%>
                        <tr>
                          <td>
                            <h2><a href="#"><%=contact.name%></a></h2>
                          </td>
                          <td><%=contact.email%></td>
                          <td><%=contact.phone%></td>
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 d-flex">
              <div class="card card-table flex-fill">
                <div class="card-header">
                  <h3 class="card-title mb-0">المنشورات</h3>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-nowrap custom-table mb-0">
                      <thead>
                        <tr>
                          <th>رقم منشور</th>
                          <th>العنوان</th>
                          <th>صورة</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.posts.forEach(post => { %>
                        <tr>
                          <td>
                            <a href="invoice-view.html"><%= post.id %></a>
                          </td>
                          <td>
                            <h2><a href="#"><%= post.title %></a></h2>
                          </td>
                          <td>
                            <img
                              src="data:image/png;base64,<%= post.image %>"
                              style="height: 50px; width: 50px"
                            />
                          </td>
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6 d-flex">
              <div class="card card-table flex-fill">
                <div class="card-header">
                  <h3 class="card-title mb-0">طلب وظيفة تمريض</h3>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table custom-table table-nowrap mb-0">
                      <thead>
                        <tr>
                          <th>اسم</th>
                          <th>البريد الإلكتروني</th>
                          <th>هاتف</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.nurse.forEach(nurse => {%>
                        <tr>
                          <td>
                            <h2><a href="#"><%=nurse.fullname%></a></h2>
                          </td>
                          <td><%=nurse.email%></td>
                          <td><%=nurse.phone%></td>
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12 d-flex">
              <div class="card card-table flex-fill">
                <div class="card-header">
                  <h3 class="card-title mb-0">طلب وظيفة طبيب</h3>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table custom-table table-nowrap mb-0">
                      <thead>
                        <tr>
                          <th>اسم</th>
                          <th>البريد الإلكتروني</th>
                          <th>هاتف</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% data.nurse.forEach(nurse => {%>
                        <tr>
                          <td>
                            <h2><a href="#"><%=nurse.fullname%></a></h2>
                          </td>
                          <td><%=nurse.email%></td>
                          <td><%=nurse.phone%></td>
                        </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /Page Content -->
      </div>
      <!-- /Page Wrapper -->
    </div>
    <!-- /Main Wrapper -->

    <!-- jQuery -->
    <%- include('./n&f/scripts.ejs') %>
  </body>
</html>
