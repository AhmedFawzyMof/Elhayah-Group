<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>ELHAYAT</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/favicon.ico" />
    <link href="/assets/css/style.css" rel="stylesheet" media="screen" />
    <link href="/assets/css/chblue.css" rel="stylesheet" media="screen" />
    <link
      href="/assets/css/theme-responsive.css"
      rel="stylesheet"
      media="screen"
    />
    <link
      href="/assets/css/dtb/jquery.dataTables.min.css"
      rel="stylesheet"
      media="screen"
    />
    <link href="/assets/css/select2.min.css" rel="stylesheet" media="screen" />
    <link href="/assets/css/toastr.min.css" rel="stylesheet" media="screen" />
    <script type="text/javascript" src="/assets/js/jquery.js"></script>
    <script
      type="text/javascript"
      src="/assets/js/jquery-ui.1.10.4.min.js"
    ></script>
    <script type="text/javascript" src="/assets/js/toastr.min.js"></script>
    <script type="text/javascript" src="/assets/js/modernizr.js"></script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700&display=swap");
      * {
        font-family: Cairo;
      }
    </style>
  </head>

  <body>
    <div id="layout">
      <%- include("../navandfooter/arnav.ejs") %>
      <section class="tp-banner-container">
        <div class="tp-banner">
          <ul>
            <li
              data-transition="slidevertical"
              data-slotamount="1"
              data-masterspeed="1000"
              data-saveperformance="off"
              data-title="Slide"
            >
              <img
                src="/img/slide/1.jpg"
                alt="fullslide1"
                data-bgposition="center center"
                data-kenburns="on"
                data-duration="6000"
                data-ease="Linear.easeNone"
                data-bgfit="130"
                data-bgfitend="100"
                data-bgpositionend="right center"
              />
            </li>
            <li
              data-transition="slidevertical"
              data-slotamount="1"
              data-masterspeed="1000"
              data-saveperformance="off"
              data-title="Slide"
            >
              <img
                src="/img/slide/2.jpg"
                alt="fullslide1"
                data-bgposition="center center"
                data-kenburns="on"
                data-duration="6000"
                data-ease="Linear.easeNone"
                data-bgfit="130"
                data-bgfitend="100"
                data-bgpositionend="right center"
              />
            </li>
          </ul>
          <div class="tp-bannertimer"></div>
        </div>
        <div class="filter-title">
          <div class="title-header">
            <h2 style="color: #fff; text-transform: uppercase">الحياة جروب</h2>
            <p class="lead">للخدمات الطبية المنزليه</p>
          </div>
          <div class="filter-header">
            <form id="sform" action="searchservices" method="post">
              <input
                type="text"
                id="q"
                name="q"
                required="required"
                placeholder="ما هي الخدمات التي تريدها؟"
                class="input-large typeahead"
                autocomplete="off"
              />
              <input type="submit" name="submit" value="Search" />
            </form>
          </div>
        </div>
      </section>
      <section class="content-central">
        <div class="content_info content_resalt">
          <div class="container" style="margin-top: 40px">
            <div class="row"></div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <ul id="sponsors" class="tooltip-hover">
                  <% service.forEach(s => { %>
                  <li
                    data-toggle="tooltip"
                    title=""
                    data-original-title="<%= s.nameAr %>"
                  >
                    <a href="/service/<%= s.slug %>"
                      ><img
                        style="width: 75px; height: 50px; border-radius: 5px"
                        src="<%= s.thumbnail %>"
                        alt="<%= s.name %>"
                    /></a>
                  </li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="semiboxshadow text-center">
          <img src="/img/img-theme/shp.png" class="img-responsive" alt="" />
        </div>
        <div class="content_info">
          <div>
            <div class="container">
              <div class="row">
                <div class="titles">
                  <h2>نتفرد بتقديم خدمات طبية منزلية متميزة</h2>
                  <hr class="tall" />
                </div>
              </div>
              <div class="portfolioContainer" style="margin-top: -50px">
                <% service.slice(service.length -4).forEach(s=> { %>
                <div
                  class="col-xs-6 col-sm-4 col-md-3 hsgrids"
                  style="padding-right: 5px; padding-left: 5px"
                >
                  <a class="g-list" href="/service/<%=s.slug%>">
                    <div class="img-hover">
                      <img
                        style="width: 100%; height: 170px"
                        src="<%= s.thumbnail %>"
                        class="img-responsive"
                      />
                    </div>
                    <div class="info-gallery">
                      <h3><%= s.nameAr %></h3>
                      <hr class="separator" />
                      <p><%= s.name %></p>
                      <div class="content-btn">
                        <a href="/service/<%= s.slug %>" class="btn btn-primary"
                          >اختر الخدمة الآن</a
                        >
                      </div>
                    </div>
                  </a>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
        <div class="content_info">
          <div class="bg-dark color-white border-top">
            <div class="container">
              <div class="row" dir="rtl">
                <div class="col-md-8">
                  <ul class="services-lines">
                    <% service.slice(service.length -8).forEach(s => {%>
                    <li style="height: 200px">
                      <a href="/service/<%= s.slug %>">
                        <div class="item-service-line">
                          <i class="fa"
                            ><img
                              class="icon-img"
                              style="width: 100%; height: 122px"
                              src="<%= s.thumbnail %>"
                          /></i>
                          <h5><%=s.nameAr%></h5>
                        </div>
                      </a>
                    </li>
                    <% }) %>
                  </ul>
                </div>
                <div class="col-md-4">
                  <div class="services-lines-info">
                    <h2>نحن نسعى جاهدين لتقديم</h2>
                    <p class="lead">
                      خدمة صحية راقية للمريض
                      <span class="line"></span>
                    </p>

                    <p>وفقًا للمعايير الدولية</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div style="margin-bottom: 150px">
          <div class="container">
            <div class="row">
              <div class="titles">
                <h2><span>خدمات شاملة</span></h2>
                <hr class="tall" />
              </div>
            </div>
          </div>
          <div id="boxes-carousel" style="padding-bottom: 20px">
            <%service.forEach((s)=> {%>
            <div
              style="
                margin: 5px;
                box-shadow: -4px 5px 5px #3333338c;
                border-radius: 15px;
                height: 350px;
                overflow: hidden;
              "
            >
              <a class="g-list" href="/service/<%=s.slug%>">
                <div class="img-hover">
                  <img
                    style="height: 188px; width: 100%"
                    src="<%= s.thumbnail %>"
                    alt=""
                    class="img-responsive"
                  />
                </div>

                <div class="info-gallery">
                  <h3><%= s.nameAr %></h3>
                  <hr class="separator" />
                  <p><%= s.name %></p>
                  <div class="content-btn">
                    <a href="/service/<%= s.slug  %>" class="btn btn-primary"
                      >اختر الخدمة الآن</a
                    >
                  </div>
                </div>
              </a>
            </div>
            <% }) %>
          </div>
        </div>
      </section>
      <%- include("../navandfooter/footerar.ejs") %>
    </div>
    <%- include("../navandfooter/scripts.ejs") %>
    <script type="text/javascript">
      jQuery(document).ready(function () {
        jQuery(".tp-banner").show().revolution({
          dottedOverlay: "none",
          delay: 5000,
          startwidth: 1170,
          startheight: 480,
          minHeight: 250,
          navigationType: "none",
          navigationArrows: "solo",
          navigationStyle: "preview1",
        });
      });
    </script>
  </body>
</html>
